            </column>
            <column name="address_line2" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="address_postcode" type="varchar(25)">
                <constraints nullable="true"/>
            </column>
            <column name="address_city" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="address_county" type="varchar(255)">
